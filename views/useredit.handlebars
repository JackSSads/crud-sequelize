<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="post" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <dir class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </dir>
    <dir class="form-control">
        <label for="occupationame">Profição:</label>
        <input type="text" name="occupation" placeholder="Digite a profição" value="{{user.occupation}}">
    </dir>
    <dir class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </dir>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/addres/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite sua rua">
        </div>
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o Número da sua residência">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite sua Cidade">
        </div>
        <input type="submit" value="Incluir endereço">
</div>
</form>
<div class="address-list">
    <h1>Lista de endereços</h1>
    {{#each user.Addresses}}
    <div>
        <table>
            <tr>
                <th>Cidade</th>
                <th>Rua</th>
                <th>Número</th>
                <th>Exclir</th>
            </tr>
            <tr>
                <td>{{this.city}}</td>
                <td>{{this.street}}</td>
                <td>{{this.number}}</td>
                <td>
                    <form action="/address/delete" method="POST">
                        <input type="hidden" name="UserId" value="{{this.UserId}}">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir">
                    </form>
                </td>
            </tr>
        </table>
    </div>
    {{/each}}
</div>
</div>